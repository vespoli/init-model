form.blue-block.with-search()
  input(type="hidden" init-model="payload.language" value="en")
  input(type="hidden" init-model="payload.pageSize" value="8")
  input(type="hidden" init-model="payload.start" value="0")
  .display-table
    .table-row
      label.table-cell Year:
      .table-cell.styled-select
        select(init-model="payload.year")
          option(value="all" default selected) All
          option 2015
          option 2016
      label.table-cell Month:
      .table-cell.styled-select
        select(init-model="payload.month")
          option(value="all" default selected) All
          option(value="1") January
          option(value="2") February
          option(value="3") March
          option(value="4") April
          option(value="5") May
      label.table-cell Keyword:
      .table-cell
        input(type="text" placeholder="Enter keyword" init-model="payload.keyword")

  button.more(ng-click="loadQuery(true)")
    span Search 
    i.icon.fm-search